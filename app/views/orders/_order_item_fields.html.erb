<tr data-order-items-target="row">
  <td class="border px-4 py-2">
    <%= f.select :product_id, options_from_collection_for_select(products, :id, :name, f.object.product_id), { include_blank: "Select product" }, class: "w-full border rounded p-1" %>
  </td>
  <td class="border px-4 py-2">
    <%= f.number_field :quantity, class: "w-full border rounded p-1" %>
  </td>
  <td class="border px-4 py-2 text-center">
    <button type="button" data-action="order-items#remove" class="text-red-600 hover:text-red-800 font-bold">&times;</button>
  </td>
</tr>
