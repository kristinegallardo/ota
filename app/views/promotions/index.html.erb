<% content_for :title, "Promotions" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center p-4">
    <h1 class="font-bold text-4xl">Promotions</h1>
    <%= link_to "Back to Home Page", root_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New promotion", new_promotion_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="promotions" class="min-w-full table-auto p-4">
    <% if @promotions.any? %>
      <table class="min-w-full table-auto">
        <thead class="bg-gray-100">
          <tr>
            <th class="border px-4 py-2 text-left">Promotion Name</th>
            <th class="border px-4 py-2 text-left">Promotion Code Number:</th>
            <th class="border px-4 py-2">Promotion Description</th>
            <th class="border px-4 py-2">Promotion Type</th>
            <th class="border px-4 py-2">Promotion Discounted Price</th>
            <th class="border px-4 py-2">Promotion Quantity</th>
          </tr>
        </thead>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <tbody data-promotions-target="container">
            <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
              <% @promotions.each do |promotion| %>
                <tr data-promotions-target="row">
                  <div id="<%= dom_id promotion %>" class="w-full sm:w-auto my-5 space-y-5">
                    <td class="border px-4 py-2">
                      <%= promotion.name %>
                    </td>
                    <td class="border px-4 py-2">
                      <%= promotion.code %>
                    </td>
                    <td class="border px-4 py-2 text-center">
                      <%= promotion.description %>
                    </td>
                    <td class="border px-4 py-2 text-center">
                      <%= promotion.promotion_type %>
                    </td>
                    <td class="border px-4 py-2 text-center">
                    <%= promotion.discounted_price %>
                    </td>
                    <td class="border px-4 py-2 text-center">
                    <%= promotion.quantity %>
                  </td>
                  </div>
                  <td class="px-4 py-2 text-center">
                    <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
                      <%= link_to "Show", promotion, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
                      <%= link_to "Edit", edit_promotion_path(promotion), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
                      <%= button_to "Destroy", promotion, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </div>
          </tbody>
        </div>
      </table>
    <% else %>
      <p class="text-center my-10">No orders found.</p>
    <% end %>
  </div>
</div>
