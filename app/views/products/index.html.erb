<% content_for :title, "Products" %>

<div class="w-full p-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= link_to "Products", root_path %></h1>
    <%= link_to "Back to Home Page", root_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New Product", new_product_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="products" class="min-w-full table-auto p-4">
    <% if @products.any? %>
      <table class="min-w-full table-auto">
        <thead class="bg-gray-100">
          <tr>
            <th class="border px-4 py-2 text-left">Product Name</th>
            <th class="border px-4 py-2 text-left">Product Code Number:</th>
            <th class="border px-4 py-2">Product Price</th>
          </tr>
        </thead>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <tbody data-products-target="container">
            <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
              <% @products.each do |product| %>
                <tr data-products-target="row">
                  <div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
                    <td class="border px-4 py-2">
                      <%= product.name %>
                    </td>
                    <td class="border px-4 py-2">
                      <%= product.code %>
                    </td>
                    <td class="border px-4 py-2 text-center">
                      <%= product.price %>
                    </td>
                  </div>
                  <td class="px-4 py-2 text-center">
                    <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
                      <%= link_to "Show", product, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
                      <%= link_to "Edit", edit_product_path(product), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
                      <%= button_to "Destroy", product, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </div>
          </tbody>
        </div>
      </table>
    <% else %>
      <p class="text-center my-10">No orders found.</p>
    <% end %>
  </div>
  
</div>